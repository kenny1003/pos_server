      <script>
      
        function printTime() {
          var clock = document.getElementById("clock");
          var now = new Date();
          var dayofweek = new Array(7);
          dayofweek[0] = "일요일";
          dayofweek[1] = "월요일";
          dayofweek[2] = "화요일";
          dayofweek[3] = "수요일";
          dayofweek[4] = "목요일";
          dayofweek[5] = "금요일";
          dayofweek[6] = "토요일";
          
          clock.innerHTML = 
            "<div style='font-size:12px; margin-bottom:-2px; font-weight:bold'>" +
            now.getFullYear() + ". " +
            (now.getMonth()+1) + ". " +
            now.getDate() + ". " +
            dayofweek[now.getDay()] + "&nbsp;&nbsp;&nbsp;" + "</div>" +
            "<div style='font-size:33px; font-weight:bold; color:white'>" + now.getHours() + ":" +
            now.getMinutes() + ":" + 
            now.getSeconds() + "</div>";
            
          setTimeout("printTime()", 1000);
          // 60000은 60000밀리초, 1밀리초 = 1/1000;
        };
        
        window.onload = function() {
          printTime();
        };
        
        
      </script>
      
      
