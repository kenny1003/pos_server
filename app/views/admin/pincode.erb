<h1>Admin#index</h1>
<div class="row">
  <!--왼쪽 화면 -->

  <div class="col-md-2" id ="admin_left">
    <div class = "container">
      <a href="/admin/index">회원관리</a> </br> <!-- 디폴트 값은 회원관리 페이지 -->
      <a href="/admin/pincode">인증코드관리</a> </br>


    </div>
  </div>


  <!--오른쪽 화면 -->

  <div class="col-md-10">
    <h3>인증코드관리</h3>

    <div class = "container">

    <table class="table table-bordered">
      <thead>
      <tr>
        <th class="col-md-1">#</th>
        <th class="col-md-5">인증코드</th>
        <th class="col-md-5">사용자</th>
        <th class="col-md-1">사용여부</th>
      </tr>
      </thead>

      <tbody>
      <% @pincode_all.each do |p|%>
          <tr>
            <td>1</td>
            <td><%=p.pincode%></td>
            <%if p.used%>
                <td><%=Store.find(p.storeid).name%></td>
            <%else%>
                <td>-</td>
            <%end%>

            <td><%=p.used%></td>
          </tr>
      <%end%>
      </tbody>
    </table>
    </div>



  </div>
</div>
