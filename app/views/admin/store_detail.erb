<h1>상점관리</h1>
<div class="row">
  <!--왼쪽 화면 -->

  <div class="col-md-2" id ="admin_left">
    <div class = "container">
      <a href="/admin/index">회원관리</a> </br> <!-- 디폴트 값은 회원관리 페이지 -->
      <a href="/admin/store">상점관리</a> </br>
      <a href="/admin/pincode">인증코드관리</a> </br>
    </div>
  </div>


  <!--오른쪽 화면 -->

  <div class="col-md-10">
    <h1><a href="/admin/store"> <--Back </a></h1>
    <h3>상점명 : <%=@picked_store.name%></h3>

    <div class = "container">
      <h4>메뉴현황</h4>
      <table class="table table-bordered">
        <thead>
        <tr>
          <th class="col-md-1">#</th>
          <th class="col-md-2">카테고리</th>
          <th class="col-md-2">메뉴이름</th>
          <th class="col-md-2">가격</th>
          <th class="col-md-2">누적판매량</th>

        </tr>
        </thead>

        <tbody>
        <%counter=1%>
        <%@picked_store.category.each do |c|%>
            <%c.menu.each do |m|%>
        <tr>
          <td><%=counter%></td>
          <td><%=c.name%></td>
          <td><%=m.name%></td>
          <td><%=m.price%></td>
          <td>-</td>
        </tr>
                <%counter+=1%>
            <%end%>
        <%end%>

        </tbody>
      </table>
    </div>



  </div>
</div>
